<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Create your team</h3>
        </div>
        <div class="card-body">
          <form action="/team/create" method="POST">
            <div class="form-group">
              <input type="text" required name="teamname" placeholder="Team name" class="form-control">
            </div>
            <div class="form-group">
              <textarea name="description" required rows="2" placeholder="Description"></textarea>
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block">
                CREATE
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>