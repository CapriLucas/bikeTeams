<div class="container p-4">
  <div class="row">
    <h1>ALONE ROUTES</h1>
    {{#each tours}}
    {{#if user_id}}
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h3 class="card-title text-uppercase">
            {{distance}} KM
          </h3>
          <p class="m-2">{{duration}} minutes</p>
          <p> {{description}} </p>
          <p> {{date}} </p>
          <a href="/tour/delete/{{id}}" class="btn btn-danger">Delete Link </a>
          <a href="/tour/edit/{{id}}" class="btn btn-secondary">Edit</a>
        </div>
      </div>
    </div>
    {{/if}}
    {{else}}
    <div class="col-md-4 mx-auto">
      <div class="card card-body text-center">
        <p>There are not any route saved by you yet</p>
        <a href="/tour/alone">Add One!!!</a>
      </div>
    </div>
    {{/each}}
  </div>
</div>
